<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/fab_back"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="30dp"
        android:scaleType="center"
        android:tag="button"
        android:src="@drawable/ic_back"
        android:backgroundTintMode="multiply"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- image_android -->
            <ImageView
                android:id="@+id/content_about_mac_mac_img"
                android:layout_width="160dp"
                android:layout_height="210dp"
                android:layout_gravity="start"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/android"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- image_fb -->
            <ImageView
                android:id="@+id/image_fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_fb"
                android:tag="fb"
                app:layout_constraintEnd_toStartOf="@id/image_play_store"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- image_play_store -->
            <ImageView
                android:id="@+id/image_play_store"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_ps"
                android:tag="playStore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="271dp" />

            <!-- text_view_version -->
            <TextView
                android:layout_width="133dp"
                android:layout_height="17dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp"
                android:text="@string/APP_VERSION_NAME"
                android:textColor="@color/grey_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_play_store" />

            <LinearLayout
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/blue_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_about_mac_mac_img">            <!-- text_view_description -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Mobile App Club - BITS Goa is an Android developers club that has been active since 2014.This app was made under the guidance of .......... for the Academic Reasearch Division of Bits Goa."
                    android:textAlignment="textStart"
                    android:textColor="@color/blue_900"
                    android:textSize="16dp" />

            </LinearLayout>

            <!-- text_view_our_team -->
            <TextView
                android:id="@+id/tv_our_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Our Team"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description" />

            <!-- container_vikram -->
            <FrameLayout
                android:id="@+id/container_vikram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_our_team">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_circular_view"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_vikram"
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_vikram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="Vikramaditya Kukreja"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/numb_vikram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:autoLink="phone"
                            android:text="+91-9619104435"
                            android:tag="number"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mail_vikram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:autoLink="email"
                            android:layout_weight="0.33"
                            android:text="mail@vikram"
                            android:tag="mail"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="45dp"
                    android:background="@color/colorAccent" />


            </FrameLayout>

            <!-- container_rushikesh -->
            <FrameLayout
                android:id="@+id/container_rushikesh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/container_vikram">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_circular_view"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_rushikesh"
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_rushikesh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="Rushikesh Jogdand"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/numb_rushikesh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:autoLink="phone"
                            android:text="+91-7083413997"
                            android:tag="number"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mail_rushikesh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.33"
                            android:text="mail_rushikesh"
                            android:tag="mail"
                            android:autoLink="email"

                            android:textColor="@color/grey_600"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="45dp"
                    android:background="@color/colorAccent" />


            </FrameLayout>

            <!-- container_aayush -->
            <FrameLayout
                android:id="@+id/container_aayush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/container_rushikesh">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_circular_view"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_aayush"
                            android:layout_width="89dp"
                            android:layout_height="89dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_aayush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="Aayush Singla"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/numb_aayush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:text="+91-9877064339"
                            android:tag="number"
                            android:autoLink="phone"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mail_aayush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.33"
                            android:tag="mail"
                            android:autoLink="email"
                            android:text="f20170815@goa.bits-pilani.ac.in"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="45dp"
                    android:background="@color/colorAccent" />


            </FrameLayout>


            <!-- text_view_developers -->
            <TextView
                android:id="@+id/tv_additions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Special Thanks to all the developers of this app with their names.abcjljljdflnlkdnlnlfnllflsnlsnlsnlkSNlksNlksNlksNlsk"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_aayush"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteY="718dp" />

        </android.support.constraint.ConstraintLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>