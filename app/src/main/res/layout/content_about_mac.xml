<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about_mac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ac.bits_pilani.goa.ard.activities.AboutMACActivity"
    tools:showIn="@layout/activity_about_mac">

    <ImageView
        android:contentDescription="@string/imageview_about_mac_description"
        android:id="@+id/about_mac_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_mac_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/mac_logo"/>

    <TextView
        android:id="@+id/about_mac_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/about_mac_textview_padding"
        android:layout_below="@+id/about_mac_image"
        android:layout_alignParentStart="true" />
</RelativeLayout>
