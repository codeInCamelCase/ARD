<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/content_about_mac"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="in.ac.bits_pilani.goa.ard.activities.AboutMAC"
tools:showIn="@layout/activity_about_mac">

    <ImageView
        android:id="@+id/about_mac_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@color/blue_900"
        android:src="@drawable/common_google_signin_btn_icon_light" />

<TextView
    android:id="@+id/about_mac_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/about_mac_textview_padding"
    android:layout_below="@+id/about_mac_image"
    android:layout_alignParentStart="true" />
</RelativeLayout>
