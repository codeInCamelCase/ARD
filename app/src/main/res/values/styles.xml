<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">adjustPan|adjustResize</item>
        <item name="fillColor_drawable_default">@color/grey_500</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Enables translucent nav bar -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- MainActivity bottom navigation view colors -->
        <item name="bottom_nav_background_color">@color/grey_50</item>
        <item name="bottom_nav_active_text_color">@color/colorPrimaryDark</item>
        <item name="bottom_nav_inactive_text_color">@color/colorPrimaryLight</item>
        <item name="bottom_nav_highlight_text_color">@color/colorPrimaryDark</item>
        <item name="bottom_nav_active_icon_color">@color/colorPrimaryDark</item>
        <item name="bottom_nav_inactive_icon_color">@color/colorPrimaryLight</item>
        <item name="bottom_nav_highlight_icon_color">@color/colorPrimaryDark</item>

        <!-- Faq Fragment tab layout colors -->
        <item name="tabLayout_faq_background_color">@color/base</item>
        <item name="tabLayout_faq_tab_background_color">@color/base</item>
        <item name="tabLayout_faq_tab_indicator_color">@color/colorAccent</item>
        <item name="tabLayout_faq_tab_text_color">@color/grey_700</item>
        <item name="tabLayout_faq_tab_selected_text_color">@color/black</item>

        <!-- Home Fragment colors -->
        <item name="background_home_fragment_backdrop">@color/grey_500</item>
        <item name="backgroundTint_home_fragment_announceFab">@color/colorPrimaryLight</item>
        <item name="fillColor_post_activity_icon_default">@color/white</item>

        <!-- Post details activity colors -->
        <item name="fillColor_post_details_activity_share_btn">@color/colorPrimary</item>
        <item name="bgTint_frame_comment_fab">@color/colorAccent</item>

        <!-- Frame search colors -->
        <item name="bg_frame_search_edittext">@color/transparent</item>
        <item name="textColor_frame_search_edittext">@color/white</item>
        <item name="textColorHint_frame_search_edittext">@color/white</item>
        <item name="cardBgColor_frame_search">@color/colorPrimaryLight</item>

        <!-- ViewHolder colors -->
        <item name="textColor_viewHolder_ann_data">@color/grey_700</item>
        <item name="textColor_viewHolder_ann_extras">@color/grey_500</item>
        <item name="tint_viewHolder_ann_icon">@color/colorAccent</item>

        <!-- Custom tab colors -->
        <item name="customTab_toolbar_color">@color/colorPrimary</item>

        <!--Sign In button colors-->
        <item name="google_signin_btn_tint">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
